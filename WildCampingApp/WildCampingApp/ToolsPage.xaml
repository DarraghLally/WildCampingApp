<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WildCampingApp.ToolsPage"
             BackgroundColor="#000000">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="btnTorch"
                    Text="ON"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand"
                    Clicked="btnTorch_Clicked"
                    Style="{StaticResource torchButtons}"
                    />
            <Button x:Name="btnTorch1"
                    Text="OFF"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand"
                    Clicked="btnTorch1_Clicked"
                    Style="{StaticResource torchButtons}"
                    />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
    
    
    
    
    
    