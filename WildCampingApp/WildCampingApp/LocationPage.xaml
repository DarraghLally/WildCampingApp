<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WildCampingApp.LocationPage">
    <ContentPage.Content>
        <StackLayout>
            
            <!--Label to display Lat-->
            <Label Text=""
                   x:Name="lblLocationDisplay_Lat"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand"
                   Style="{StaticResource locationLbl}"/>

            <!--Label to display Long-->
            <Label Text=""
                   x:Name="lblLocationDisplay_Long"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand"
                   Style="{StaticResource locationLbl}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>