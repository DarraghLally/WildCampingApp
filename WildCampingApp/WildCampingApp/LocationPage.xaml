<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WildCampingApp.LocationPage"
             BackgroundColor="Gray">
    <ContentPage.Content>
        <StackLayout>

            <Frame BorderColor="Black"
                   Padding="10, 10, 10, 10"
                   Margin="10, 100, 10, 20"
                   BackgroundColor="White">
                <!--Label to display Lat-->
                <Label Text=""
                       x:Name="lblLocationDisplay_Lat"
                       VerticalOptions="CenterAndExpand" 
                       HorizontalOptions="CenterAndExpand"
                       Style="{StaticResource locationLbl}"/>
            </Frame>

            <Frame BorderColor="Black"
                   Padding="10, 10, 10, 10"
                   Margin="10, 200, 10, 20"
                   BackgroundColor="White">
                <!--Label to display Long-->
                <Label Text=""
                       x:Name="lblLocationDisplay_Long"
                       VerticalOptions="CenterAndExpand" 
                       HorizontalOptions="CenterAndExpand"
                       Style="{StaticResource locationLbl}"/>
            </Frame>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>